    },
    {
      "type": "paragraph",
      "content": [
        {
          "type": "text",
          "text": "Behind the scenes, every cURL call follows HTTP rules:"
        }
      ]
    },
    {
      "type": "bulletList",
      "content": [
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Method (GET, POST)"
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Headers"
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Body"
                }
              ]
            }
          ]
        },
        {
          "type": "listItem",
          "content": [
            {
              "type": "paragraph",
              "content": [
                {
                  "type": "text",
                  "text": "Status codes"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "paragraph",
      "content": [
        {
          "type": "text",
          "text": "Understanding this makes "
        },
        {
          "type": "text",
          "marks": [
            {
              "type": "bold"
            }
          ],
          "text": "every backend tool easier"
        },
        {
          "type": "text",
          "text": " later."
        }
      ]
    },
    {
      "type": "horizontalRule"
    },
    {
      "type": "heading",
      "attrs": {
        "level": 2
      },
      "content": [
        {
          "type": "text",
          "text": "Where cURL Fits in Backend Development"
        }
      ]
    },
    {
      "type": "paragraph"
    },
    {
      "type": "image",
      "attrs": {
        "src": "https://assets.apidog.com/blog-learn/2024/02/apidog-workflow.png",
        "alt": "Image",
        "title": null,
        "width": null,
        "height": null
      }
    },
    {
      "type": "paragraph"
    },
    {
      "type": "image",
      "attrs": {
        "src": "https://svitla.com/uploads/ckeditor/01_27.05.jpg",
        "alt": "Image",
        "title": null,
        "width": null,
        "height": null
      }
    },
    {
      "type": "paragraph",
      "content": [
        {
